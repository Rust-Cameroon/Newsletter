{
  "name": "rust-cameroon-website",
  "version": "1.0.0",
  "description": "Rust Cameroon Community Website",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release",
    "deploy": "./scripts/deploy.sh",
    "setup:ssl": "./scripts/ssl-setup.sh",
    "start:services": "./scripts/start-services.sh"
  },
  "keywords": ["rust", "cameroon", "community", "website", "react"],
  "author": "Rust Cameroon Community",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "concurrently": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5"
  }
}
